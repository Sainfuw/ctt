          <label for="formGroupExampleInput">
            <%= form.label :category %>
          </label>
          <input type="text" class="form-control" id="formGroupExampleInput"<%= form.text_field :category, id: :course_category %>
        </div>

        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
      <br>
      <button type="button" class="btn btn-outline-info">
        <%= link_to 'Show', admins_course_path(@course) %> |
        <%= link_to 'Back', admins_courses_path %>
      </button>
    </form>
  </div>
</div>

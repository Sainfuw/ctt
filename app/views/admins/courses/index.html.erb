<div class="container air">
  <h1 class="text-center" style="color:white">Cursos</h1>
  <table class="table table-bordered mx-auto tablestyle">
    <thead>
      <tr>
        <th>Name</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @courses.each do |course| %>
        <tr>
          <td><%= course.name %></td>
          <td><%= course.category %></td>
          <td><%= link_to 'Show', admins_course_path(course), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_admins_course_path(course), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Destroy', admins_course_path(course), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Crear nuevo curso', new_admins_course_path, class: 'btn btn-primary' %>
  <%= link_to 'Volver', admins_path, class: 'btn btn-secondary  '  %>

</div>

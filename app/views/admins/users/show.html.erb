<div class="container">
  <table class="table table-bordered mx-auto tablestyle" >
    <thead class="thead-dark">
      <tr>
        <th colspan="4">
          <h2 class="text-center">Usuarios</h2>
        </th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th>Nombre</th>
        <th>Apellido</th>
        <th>Usuario</th>
        <th>Correo</th>
      </tr>
      <tr>
        <td><%= @user.firstname %></td>
        <td><%= @user.lastname %></td>
        <td><%= @user.username %></td>
        <td><%= @user.email %></td>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <div class="col-md-6">
      <%= link_to 'Editar', edit_admins_user_path(@user), class: 'btn btn-primary btn-block' %>
    </div>
    <div class="col-md-6">
      <%= link_to 'Atras', admins_users_path, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>

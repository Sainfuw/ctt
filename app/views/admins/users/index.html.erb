<div class="container air">
  <h1 class="text-center">Users</h1>
  <table class="table table-bordered mx-auto tablestyle">
    <thead class="thead-dark">
      <tr>
        <th class="text-center">Correo</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= link_to 'Show', admins_user_path(user), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Edit', edit_admins_user_path(user), class: 'btn btn-primary btn-block' %></td>
          <td><%= link_to 'Destroy', admins_user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary btn-block' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Volver', admins_path, class: 'btn btn-secondary btn-block' %>

</div>

<div class="row">
  <div class="col-md-6 ">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Asignatura</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.name %></td>
            <td><%= course.category %></td>
            <td> <%= link_to 'Transmitir', init_transmission_course_path(course) %> </td>
            <td><%= link_to 'Show', course %></td>
            <td><%= link_to 'Edit', edit_course_path(course) %></td>
            <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Course', new_admins_course_path %>
  </div>
</div>


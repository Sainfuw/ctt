<div class="container air">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <table class="table table-bordered tablestyle">
        <thead class="thead-dark">
          <tr>
            <th>Nombre</th>
            <th>Asignatura</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |course| %>
            <tr>
              <td><%= course.name %></td>
              <td><%= course.category %></td>
              <td><%= link_to 'Informacion', info_course_path(course), class: 'btn btn-primary btn-block' %></td>
              <% if get_inscription(current_user, course).nil? %>
                <td><%= link_to 'Inscribirme', inscriptions_path(:course_id => course.id), method: :post, class: 'btn btn-primary btn-block' %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= link_to 'Volver', root_path, class: 'btn btn-primary btn-block' %>
    </div>
  </div>
</div>

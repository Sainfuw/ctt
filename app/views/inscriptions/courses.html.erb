<div class="container air">
  <div class="row">
    <div class="col-md-6">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>Name</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @courses.each do |inscription| %>
            <tr>
              <td><%= Course.find(inscription.course_id).name %></td>
              <td>
                <%= link_to 'Ir a Clases', course_path(inscription.course_id), class: 'btn btn-primary' %>
                <%= link_to 'Informacion', course_info_path(inscription.course_id), class: 'btn btn-primary' %>
                <% if inscription.kind == "Alumno" %>
                  <%= link_to 'Mis Notas', root_path, class: 'btn btn-primary' %>
                <% elsif inscription.kind == "Ayudante" %>
                  <%= link_to 'Ayudar', root_path, class: 'btn btn-primary' %>
                <% else %>
                  <%= link_to 'Calificar', root_path, class: 'btn btn-primary' %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
